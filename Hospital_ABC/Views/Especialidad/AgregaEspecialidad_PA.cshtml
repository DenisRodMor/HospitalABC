@model Entidades.Especialidades

@{
    //ViewBag.Title = "AgregaEspecialidad_PA";
}

<h2>Agregar Especialidad</h2>


@using (Html.BeginForm("AccionesEntidades", "Especialidad", FormMethod.Post))

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Especialidades</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IdEspecialidades, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdEspecialidades, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdEspecialidades, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoEspecialidad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TipoEspecialidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TipoEspecialidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" name="submitButton" value="Agregar"
                        class="btn btn-primary" title="Agregar"
                        data-toggle="tooltip" data-container="body"
                        data-placement="right">
                    Agregar


                </button>

            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "recEspecialidad_PA")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
