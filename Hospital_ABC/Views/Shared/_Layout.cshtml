<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hospital ABC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HOSPITAL", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Inicio", "Index", "Home")</li>*@
                    @*<li>@Html.ActionLink("Acerca de", "About", "Home")</li>*@
                    @*<li>@Html.ActionLink("Contacto", "Contact", "Home")</li>*@
                    <li>@Html.ActionLink("Pacientes", "recPacientes_PA", "Pacientes")</li>
                    <li>@Html.ActionLink("Especialidades", "recEspecialidad_PA", "Especialidad")</li>
                    <li>@Html.ActionLink("Medico Especialista", "recMedicoEspecialista_PA", "MedicoEspecialista")</li>
                    <li>@Html.ActionLink("Registro Citas", "recRegistroCitas_PA", "RegistroCitas")</li>
                    <li>@Html.ActionLink("Medicamentos", "recMedicamentos_PA", "Medicamento")</li>
                    <li>@Html.ActionLink("Diagnostico", "recDiagnostico_PA", "Diagnostico")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hospital ABC</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
