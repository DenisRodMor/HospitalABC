@model IEnumerable<Entidades.PA_RegistroCitas_MostrarDetalle_Result>

@{
    @*ViewBag.Title = "rec_PA";*@
}

<h2>Registro Citas</h2>

<p>
    @Html.ActionLink("Nuevo", "AgregaRegistroCitas_PA")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdCita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdPaciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdmedicoEspecialista)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdEspecialidad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPaciente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdmedicoEspecialista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEspecialidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "ModificaRegistroCitas_PA", new { id = item.IdCita })
                @Html.ActionLink("Detalles", "DetalleRegistroCitas_PA", new { id = item.IdCita })
                @Html.ActionLink("Eliminar", "EliminarRegistroCitas_PA", new { id = item.IdCita })
            </td>
        </tr>
    }

</table>
